@page
@model BookingManagementRazorPages.Pages.Manager.CampusManagement.CreateCampusPageModel

<h1>Tạo Campus Mới</h1>

<form method="post" class="create-campus-form">
    <div class="form-group">
        <label for="name">Tên Campus:</label>
        <input type="text" id="name" name="name" class="form-control @(ModelState.ContainsKey("Campus.Name") && ModelState["Campus.Name"].Errors.Count > 0 ? "is-invalid" : "")"
               required maxlength="50" placeholder="Nhập tên campus" value="@Model.Campus.Name" />
        <div class="invalid-feedback">
            @if (ModelState.ContainsKey("Campus.Name") && ModelState["Campus.Name"].Errors.Count > 0)
            {
                <p>Tên Campus không được bỏ trống và không quá 50 ký tự.</p>
            }
        </div>
    </div>

    <div class="form-group">
        <label for="code">Mã Campus:</label>
        <input type="text" id="code" name="code" class="form-control @(ModelState.ContainsKey("Campus.Code") && ModelState["Campus.Code"].Errors.Count > 0 ? "is-invalid" : "")"
               required maxlength="10" placeholder="Nhập mã campus" value="@Model.Campus.Code" />
        <div class="invalid-feedback">
            @if (ModelState.ContainsKey("Campus.Code") && ModelState["Campus.Code"].Errors.Count > 0)
            {
                <p>Mã Campus không được bỏ trống và không quá 10 ký tự.</p>
            }
        </div>
    </div>

    <div class="form-group">
        <label for="location">Vị trí Campus:</label>
        <input type="text" id="location" name="location" class="form-control @(ModelState.ContainsKey("Campus.Location") && ModelState["Campus.Location"].Errors.Count > 0 ? "is-invalid" : "")"
               required maxlength="50" placeholder="Nhập vị trí campus" value="@Model.Campus.Location" />
        <div class="invalid-feedback">
            @if (ModelState.ContainsKey("Campus.Location") && ModelState["Campus.Location"].Errors.Count > 0)
            {
                <p>Vị trí Campus không được bỏ trống và không quá 50 ký tự.</p>
            }
        </div>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Tạo Campus</button>
    </div>
</form>



<style>
    .is-invalid {
        border-color: red;
    }

    .invalid-feedback {
        color: red;
        font-size: 0.875em;
        display: block;
    }

    .create-campus-form {
        max-width: 600px;
        margin: 0 auto;
        padding: 20px;
        background-color: #f9f9f9;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

        .create-campus-form .form-group {
            margin-bottom: 15px;
        }

        .create-campus-form label {
            font-size: 16px;
            font-weight: bold;
            display: block;
            margin-bottom: 5px;
            color: #333;
        }

        .create-campus-form .form-control {
            width: 100%;
            padding: 10px;
            font-size: 14px;
            border: 1px solid #ccc;
            border-radius: 5px;
            transition: border-color 0.3s;
        }

            .create-campus-form .form-control:focus {
                border-color: #4B0082;
                outline: none;
            }

        .create-campus-form .btn {
            background-color: #4B0082;
            color: white;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            font-size: 16px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

            .create-campus-form .btn:hover {
                background-color: #320060;
            }
</style>
