@* @page
@model BookingManagementRazorPages.Pages.Manager.RoomManagement.CreateRoomPageModel
<h1>Tạo phòng Mới</h1>

<form method="post" class="create-room-form">
    <div class="form-group">
        <label for="name">Tên phòng:</label>
        <input type="text" id="name" name="name" class="form-control @(ModelState.ContainsKey("Room.Name") && ModelState["Room.Name"].Errors.Count > 0 ? "is-invalid" : "")"
               required maxlength="50" placeholder="Nhập tên department" value="@Model.Room.Name" />
        <div class="invalid-feedback">
            @if (ModelState.ContainsKey("Room.Name") && ModelState["Room.Name"].Errors.Count > 0)
            {
                <p>Tên phòng không được bỏ trống và không quá 50 ký tự.</p>
            }
        </div>
    </div>

    <div class="form-group">
        <label for="capacity">Sức chứa của phòng:</label>
        <input type="text" id="capacity" name="capacity" class="form-control @(ModelState.ContainsKey("Room.Capacity") && ModelState["Room.Capacity"].Errors.Count > 0 ? "is-invalid" : "")"
               required maxlength="2" placeholder="Nhập mô tả sức chứa của phòng" value="@Model.Room.Capacity" />
        <div class="invalid-feedback">
            @if (ModelState.ContainsKey("Room.Capacity") && ModelState["Room.Capacity"].Errors.Count > 0)
            {
                <p>Sức chứa của phòng không được bỏ trống và không quá 2 ký tự.</p>
            }
        </div>
    </div>

    <div class="form-group">
        <label for="name">Vị trí:</label>
        <input type="text" id="loacation" name="loacation" class="form-control @(ModelState.ContainsKey("Room.loacation") && ModelState["Room.loacation"].Errors.Count > 0 ? "is-invalid" : "")"
               required maxlength="50" placeholder="Nhập tên department" value="@Model.Room.Name" />
        <div class="invalid-feedback">
            @if (ModelState.ContainsKey("Room.loacation") && ModelState["Room.loacation"].Errors.Count > 0)
            {
                <p>Vị trí phòng không được bỏ trống và không quá 50 ký tự.</p>
            }
        </div>
    </div>

    <div class="form-group">
        <label for="campus">Chọn Campus:</label>
        <select id="campus" name="campusId" class="form-control ">
            <option value="">Chọn Campus</option>
            @foreach (var campus in Model.Campuses)
            {
                <option value="@campus.Id">@campus.Name</option>
            }
        </select>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Tạo phòng</button>
    </div>
</form>



<style>
    .is-invalid {
        border-color: red;
    }

    .invalid-feedback {
        color: red;
        font-size: 0.875em;
        display: block;
    }

    .create-campus-form {
        max-width: 600px;
        margin: 0 auto;
        padding: 20px;
        background-color: #f9f9f9;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

        .create-campus-form .form-group {
            margin-bottom: 15px;
        }

        .create-campus-form label {
            font-size: 16px;
            font-weight: bold;
            display: block;
            margin-bottom: 5px;
            color: #333;
        }

        .create-campus-form .form-control {
            width: 100%;
            padding: 10px;
            font-size: 14px;
            border: 1px solid #ccc;
            border-radius: 5px;
            transition: border-color 0.3s;
        }

            .create-campus-form .form-control:focus {
                border-color: #4B0082;
                outline: none;
            }

        .create-campus-form .btn {
            background-color: #4B0082;
            color: white;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            font-size: 16px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

            .create-campus-form .btn:hover {
                background-color: #320060;
            }
</style>
 *@